/**
 * Create FSP roles
 */
function fsp_update_6000() {
  $ret   = array();
  $ret[] = update_sql("REPLACE INTO {role} (name) VALUES ('participant')"); 
  $ret[] = update_sql("REPLACE INTO {role} (name) VALUES ('pioneer')"); 
  $ret[] = update_sql("REPLACE INTO {role} (name) VALUES ('friend')"); 
  return $ret;
}

